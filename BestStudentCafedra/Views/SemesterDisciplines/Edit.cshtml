@model BestStudentCafedra.Models.SemesterDiscipline

@{
    ViewData["Title"] = "Изменение данных о семестровой дисциплине";
}

<h1>Изменение данных о семестровой дисциплине</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DisciplineId" />

            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Semester" class="control-label"></label>
                <input asp-for="Semester" class="form-control" />
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ControlType" class="control-label"></label>
                <select asp-items="Html.GetEnumSelectList<ControlType>()" asp-for="ControlType" class="form-control"></select>
                <span asp-validation-for="ControlType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@ViewBag.returnUrl" />Вернуться</a>
</div>

<br />
<h4>Работы:</h4>
<p>Список учебных деятельностей на которые разделена дисциплина по образовательной программаме</p>
<p>
    <a asp-controller="Activities" asp-action="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Activities.FirstOrDefault().Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activities.FirstOrDefault().Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activities.FirstOrDefault().MaxPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activities.FirstOrDefault().Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Activities)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxPoints)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Подробнее</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
