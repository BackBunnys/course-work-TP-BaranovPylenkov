@model BestStudentCafedra.Models.ViewModels.UserViewModel
    
<div class="modal-content">
    <div class="modal-header">
        <h4>Выберите</h4>
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label asp-for="SubjectAreaId" class="control-label"></label>
            <select asp-for="SubjectAreaId" class="form-control" asp-items="ViewBag.SubjectId"></select>
            <span asp-validation-for="SubjectAreaId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button class="close" data-dismiss="modal" area-hidden="true">Ок</button>
        </div>
    </div>
</div>