@model BestStudentCafedra.Models.ViewModels.UserViewModel
    
<div class="modal-content">
    <div class="modal-header">
        <h4>Связать аккаунт</h4>
        <button class="close" data-dismiss="modal" area-hidden="true">&times;</button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <select asp-for="SubjectAreaId" class="form-control" asp-items="ViewBag.SubjectId"> 
                <option disabled selected value="">Выберите @ViewBag.Type...</option>
            </select>
        </div>
        <div class="form-group">
            <button class="close" data-dismiss="modal" area-hidden="true">Ок</button>
        </div>
    </div>
</div>