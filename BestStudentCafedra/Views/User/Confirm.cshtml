@model BestStudentCafedra.Models.ViewModels.UserConfirmationViewModel

@{
    ViewData["Title"] = "Подтверждение учётной записи";
}

<h1>Подтверждение учётной записи</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Confirm" method="post">
            <input type="hidden" asp-for="Email" class="form-control" value="@Model.Email" />
            <input type="hidden" asp-for="FullName" class="form-control" value="@Model.FullName" />
            <input type="hidden" asp-for="AllRoles" class="form-control" value="@Model.AllRoles" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>: @Model.Email
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>: @Model.FullName
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span>Выберите роли: </span><br />
                @foreach (var role in Model.AllRoles)
                {
                    <input type="checkbox" name="Roles" value="@role.Name" />@role.Name <br />
                }
                <span asp-validation-for="AllRoles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectAreaId" class="control-label"></label>
                <input asp-for="SubjectAreaId" class="form-control" />
                <span asp-validation-for="SubjectAreaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Подтвердить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
