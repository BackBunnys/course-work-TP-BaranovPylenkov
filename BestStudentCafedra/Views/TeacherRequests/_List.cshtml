@model IEnumerable<BestStudentCafedra.Models.TeacherRequest>

@if (Model.Count() > 0)
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GraduationWork.Student.Group)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GraduationWork.Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motivation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatingDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GraduationWork.Student.Group.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GraduationWork.Student.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Motivation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatingDate)
                </td>
                <td>
                    <div class="btn-group btn-group-sm float-right" role="group">
                        <a href="#" class="btn btn-outline-success" onclick="loadAndShowModal('@Context.Request.Path/Approve/@item.Id?returnUrl=@Context.Request.Path')">Принять</a>
                        <a href="#" class="btn btn-outline-danger" onclick="loadAndShowModal('@Context.Request.Path/Reject/@item.Id?returnUrl=@Context.Request.Path')">Отклонить</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <div class="text-center">Отсутствуют.</div>
}
