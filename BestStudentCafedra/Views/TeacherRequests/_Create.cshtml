@model BestStudentCafedra.Models.TeacherRequest

<div class="modal-content">
    <div class="modal-header">
        <div>
            <h4>Создание запроса</h4>
        </div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden name="returnUrl" value="@ViewBag.returnUrl" />
            <input hidden asp-for="GraduationWorkId" />

            <div class="form-group">
                <label asp-for="TeacherId" class="control-label"></label>
                <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.TeacherId"></select>
            </div>
            <input hidden asp-for="RequestType" />
            <div class="form-group">
                <label asp-for="Motivation" class="control-label"></label>
                <textarea asp-for="Motivation" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Motivation" class="text-danger"></span>
            </div>
            <div class="form-group w-100 mb-0">
                <input type="submit" value="Создать" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>
