@model BestStudentCafedra.Models.RatingControl

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">Изменить данные о промежуточном рейтинг контроле</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="GroupId" />
            <input type="hidden" asp-for="SemesterDisciplineId" />
            <input type="hidden" asp-for="CompletionDate" />
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" type="number" min="1" />
                <span asp-validation-for="Number" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
