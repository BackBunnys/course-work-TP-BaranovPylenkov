@model BestStudentCafedra.Models.TeacherDiscipline

@{
    ViewData["Title"] = "Добавить дисциплину преподавателю";
}

<h1>Добавить дисциплину преподавателю</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddDiscipline">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden name="ReturnUrl" value="@ViewBag.ReturnUrl" />
            <div class="form-group">
                <label asp-for="DisciplineId" class="control-label"></label>
                <select asp-for="DisciplineId" class="form-control" asp-items="ViewBag.DisciplinesId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@ViewBag.TeacherId">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
