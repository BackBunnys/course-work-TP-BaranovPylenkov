@model BestStudentCafedra.Models.Discipline

@{
    ViewData["Title"] = "Добавление дисциплины";
}

<h1>Добавление дициплины</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden name="ForGroup" value="@ViewBag.ForGroup" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (ViewBag.ForGroup != null)
    {
        <a asp-controller="AcademicGroups" asp-action="Details" asp-route-id="@ViewBag.ForGroup">Вернуться</a>
    }
    else
    {
        <a asp-action="Index">Вернуться</a>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
