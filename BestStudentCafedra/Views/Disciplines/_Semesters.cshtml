@model IEnumerable<BestStudentCafedra.Models.SemesterDiscipline>

<td colspan="3" class="p-0">
    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Year)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Semester)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ControlType)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sem in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(semItem => sem.Year)
                        </td>
                        <td>
                            @Html.DisplayFor(semItem => sem.Semester)
                        </td>
                        <td>
                            @Html.DisplayFor(semItem => sem.ControlType)
                        </td>
                        <td>
                            <a asp-controller="SemesterDisciplines" asp-action="Details" asp-route-id="@sem.Id" asp-route-returnUrl="@ViewBag.ReturnUrl" class="btn btn-sm btn-outline-primary float-right">Перейти</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center text-info m-3">Семестры по данной дисциплине ещё не добавлены!</p>
    }
</td>
